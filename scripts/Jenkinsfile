
pipeline {
    agent any
    options {
        timeout(time: 1, unit: 'HOURS')
    }
    stages {
        stage("Clone") {
            steps {
                checkout scmGit(
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/Maisaa66/tree-component.git',
                    ]],
                )
            }
        }

        stage("Install Dependencies") {
            steps {
                bat 'npm install --legacy-peer-deps'
            }
        }

        stage("Test") {
            steps {
                bat 'npm test'
            }
        }


        stage("Lint") {
            steps {
                bat 'npm run lint'
            }
        }
    }
    post {
        success {
                echo "everything is good"
        }
    }
}
